# FastAPI application settings
ENVIRONMENT=dev
PROJECT_NAME=Annual Report Analyst
VERSION=0.1.0

# OpenAI configuration
OPENAI_API_KEY=sk-...
OPENAI_API_BASE=https://api.openai.com/v1
LLM_MODEL=gpt-5-mini
TABLE_SUMMARY_MODEL=gpt-5-mini
EMBEDDINGS_MODEL=text-embedding-3-large
AGENTIC_DOCUMENT_ANALYSIS_API_KEY=
RETRIEVAL_DECIDER_MODEL=gpt-4o-mini
QUERY_EXPANSION_MODEL=gpt-5-mini
GATING_TEMPERATURE=0.0
QUERY_EXPANSION_TEMPERATURE=0.2
QUERY_EXPANSION_COUNT=5
RERANK_TOP_K=10

# Vector store configuration
CHROMA_PERSIST_DIR=./data/chroma
VECTOR_COLLECTION_NAME=annual-reports
RETRIEVER_K=12

# Structured store configuration
STRUCTURED_DB_URL=sqlite+aiosqlite:///./data/metrics.db

# LangSmith tracing
LANGCHAIN_TRACING_V2=true
LANGSMITH_API_KEY=
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=consigli-annual-report-analyst

# Feature flags / tuning
MEMORY_MAX_TURNS=10
MEMORY_SUMMARY_MAX_CHARS=2000
ENABLE_TRACING=true
INGEST_BUCKET_PATH=./data/ingest
